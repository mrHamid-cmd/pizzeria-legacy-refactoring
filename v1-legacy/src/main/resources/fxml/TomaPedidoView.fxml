<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pizzasystem.controladores.TomaPedidoController">
    
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 10 20;">
            <HBox>
                <Label text="Crear Nueva Pizza" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
            </HBox>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox spacing="10">
                <Button fx:id="btnGestionar" text="Gestionar Pedidos" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"
                        onAction="#gestionarPedido"/>
            </HBox>
        </HBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.5">
            <!-- Panel izquierdo: Configuración -->
            <VBox spacing="15" padding="20">
                <Label text="Personaliza tu pizza:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150"/>
                        <ColumnConstraints prefWidth="250"/>
                    </columnConstraints>
                    
                    <Label text="Tipo de Masa:" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="cmbMasa" prefWidth="250" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    
                    <Label text="Salsa:" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="cmbSalsa" prefWidth="250" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    
                    <Label text="Queso:" GridPane.rowIndex="2"/>
                    <ComboBox fx:id="cmbQueso" prefWidth="250" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    
                    <Label text="Tipo de Orilla:" GridPane.rowIndex="3"/>
                    <ComboBox fx:id="cmbTipoOrilla" prefWidth="250" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>
                
                <Label text="Ingredientes (Ctrl+Click para múltiples):" 
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <ListView fx:id="lstIngredientes" prefHeight="150"/>
                
                <Label text="Condimentos (Ctrl+Click para múltiples):" 
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <ListView fx:id="lstCondimentos" prefHeight="100"/>
            </VBox>
            
            <!-- Panel derecho: Resumen y acciones -->
            <VBox spacing="15" padding="20">
                <Label text="Resumen del Pedido:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <TextArea fx:id="txtResumen" editable="false" prefHeight="300" wrapText="true"/>
                
                <HBox spacing="20" alignment="CENTER_RIGHT">
                    <Label text="Total:" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Label fx:id="lblTotal" text="$0.00" 
                           style="-fx-font-size: 24px; -fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
                </HBox>
                
                <HBox spacing="20" alignment="CENTER">
                    <Button fx:id="btnConfirmar" text="Confirmar Pedido" 
                            style="-fx-font-size: 14px; -fx-pref-width: 150; -fx-background-color: #27ae60; -fx-text-fill: white;" 
                            onAction="#confirmarPedido"/>
                    <Button fx:id="btnCancelar" text="Cancelar" 
                            style="-fx-font-size: 14px; -fx-pref-width: 150; -fx-background-color: #e74c3c; -fx-text-fill: white;" 
                            onAction="#cancelarPedido"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>