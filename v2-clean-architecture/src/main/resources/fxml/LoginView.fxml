<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pizzasystem.controladores.LoginController">
    
    <center>
        <VBox alignment="CENTER" spacing="20">
            <VBox.margin>
                <Insets top="50" bottom="50" left="100" right="100"/>
            </VBox.margin>
            
            <Label text="Sistema de Pizzería" styleClass="titulo-principal">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
            
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="100"/>
                    <ColumnConstraints prefWidth="200"/>
                </columnConstraints>
                
                <Label text="Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtUsuario" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                
                <Label text="Contraseña:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="txtContrasena" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                
                <Label fx:id="lblMensajeError" text="" 
                       style="-fx-text-fill: red; -fx-font-size: 12px;"
                       GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                
                <Button fx:id="btnIniciarSesion" text="Iniciar Sesión" 
                        GridPane.rowIndex="3" GridPane.columnIndex="1"
                        GridPane.halignment="CENTER"
                        onAction="#manejarLogin"/>
            </GridPane>
        </VBox>
    </center>
</BorderPane>